module LightDSL2IFC.LightDSL2IFC

var modelSlot = 'model'
var instanceFilePath = 'instance.xmi'
var ifcWritePath = 'output.ifc'

Workflow {
	
	component = XMI2ModelReader {
		slot = modelSlot
		path = instanceFilePath
	}
	
//	component = org.eclipse.emf.mwe.utils.DirectoryCleaner {
//		directory = targetDir
// 	}
	
	component = LightDSL2IFCTransformer {
		slot = modelSlot
	}
	
	component = Model2IFCWriter {
		slot = modelSlot
		path = ifcWritePath
	}
	
}